<!DOCTYPE html>
<html>
<head>
    <title>{% block title '' %} EasyBib</title>
    <link rel="shortcut icon" href="/favicon.ico" />
    <link href="/css/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css" >
    <link href="/css/bootstrap-theme.min.css" media="screen" rel="stylesheet" type="text/css" >
    <link href="/css/discover.css" media="screen, projection" rel="stylesheet" type="text/css" >
</head>
<body>

{% block navbar %}
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ app.url_generator.generate('step1') }}">
                <img class="brand" src="http://cdn-edge2.easybib.com/images/easybib_logo_small.gif"/>
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="{{ (app.request.attributes.get('_route') == 'step1') ? 'active' : '' }}">
                    <a href="{{ app.url_generator.generate('step1') }}">Step A,B and C - Get Authorization Code</a>
                </li>
                <li class="{{ (app.request.attributes.get('_route') == 'step2') ? 'active' : '' }}">
                    <a href="{{ app.url_generator.generate('step2') }}">Step D and E - Get Access Token</a>
                </li>
                <li class="{{ (app.request.attributes.get('_route') == 'discover') ? 'active' : '' }}">
                    <a href="{{ app.url_generator.generate('discover') }}">Discover</a>
                </li>
                <li class="{{ (app.request.attributes.get('_route') == 'readme') ? 'active' : '' }}">
                    <a href="{{ app.url_generator.generate('readme') }}">README</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
{% endblock %}

<div class="container">
{% block content %}{% endblock %}
</div>
</body>
</html>

